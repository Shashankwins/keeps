pipeline {
    agent any

    tools {
        maven 'Maven3'      // configure in Jenkins tools
        jdk 'Java17'        // configure in Jenkins tools
    }

    environment {
        SONARQUBE = credentials('sonarqube_token') // add in Jenkins credentials
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-pat',
                    url: 'https://github.com/Shashankwins/keeps.git'
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean verify'  // runs tests + JaCoCo coverage
            }
        }

   stage('SonarQube Analysis') {
    steps {
        withSonarQubeEnv('SonarQube') {   // "SonarQube" is Jenkins global tool config name
            sh """
                mvn sonar:sonar \
                -Dsonar.projectKey=keeps \
                -Dsonar.projectName=keeps \
                -Dsonar.host.url=http://your-sonarqube-server:9000 \
                -Dsonar.login=$SONARQUBE
            """
        }
    }
}


        stage('Quality Gate') {
            steps {
                timeout(time: 1, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }
}
